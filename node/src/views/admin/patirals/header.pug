header.header
  nav.navbar.navbar-expand-lg.navbar-dark.bg-danger.shadow-sm.py-2
    .container
      a.navbar-brand.d-flex.align-items-center(href="/")
        img(src="/img/ST.png" alt="Logo" width="50" class="me-2 shadow-sm")
        
      button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav.ms-auto.mb-2.mb-lg-0.gap-2
          li.nav-item
            a.nav-link.active.text-white.fw-semibold.px-3.rounded(href="/admin/dashboard" aria-current="page") Tổng quan
          li.nav-item
            a.nav-link.text-white.fw-semibold.px-3.rounded(href="/products") Sản phẩm
          //- Đăng xuất - nên dùng nav-link thay vì btn btn-danger để đồng nhất style
         
          //- Dropdown tùy chọn
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle.text-white.fw-semibold.px-3.rounded(href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false") Quản lý
            ul.dropdown-menu.dropdown-menu-end.shadow-lg(aria-labelledby="navbarDropdown")
             
              if (role.permissions.includes("products_view"))
                li
                  a.dropdown-item(href=`${prefixAdmin}/products`) Danh sách sản phẩm
              if (role.permissions.includes("products-category_view"))
                li
                  a.dropdown-item(href=`${prefixAdmin}/products-category`) Danh mục sản phẩm
              if (role.permissions.includes("roles_view"))
                li
                  a.dropdown-item(href=`${prefixAdmin}/roles`) Nhóm quyền
              if (role.permissions.includes("roles_permissions"))
                li
                  a.dropdown-item(href=`${prefixAdmin}/roles/permissions`) Phân quyền
              if (role.permissions.includes("accounts_view"))
                li
                  a.dropdown-item(href=`${prefixAdmin}/accounts`) Danh sách tài khoản
              li 
                a.dropdown-item(href=`${prefixAdmin}/settings/general`) Cài đặt chung
          li.nav-item
            a(class="btn btn-success"
            href=`${prefixAdmin}/profile`) #{user.username}
            
          li.nav-item
              a( class ="btn btn-danger" 
              href=`${prefixAdmin}/auth/logout`) Đăng xuất

style.
  .navbar-nav .nav-link {
    transition: background 0.2s, color 0.2s;
  }
  .navbar-nav .nav-link:hover, .navbar-nav .nav-link.active {
    color: #ffc107 !important;
    background: rgba(255,255,255,0.1);
    border-radius: 8px;
  }
  .navbar-brand img {
    border-radius: 12px;
    background: #fff;
    padding: 4px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  }
  .dropdown-menu {
    border-radius: 10px;
    min-width: 200px;
    font-size: 1rem;
  }
  .dropdown-item:hover {
    background: #ffc107;
    color: #fff;
  }
  @media (max-width: 991.98px) {
    .navbar-nav .nav-link {
      margin-bottom: 8px;
    }
  }
