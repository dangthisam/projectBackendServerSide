extends ../../layout/default.pug
include ../../mixins/box-head.pug

block main
    // Hero Section với gradient động
    .hero-section.position-relative.overflow-hidden
        .hero-background
        .container.position-relative
            .row.justify-content-center
                .col-md-10
                    .text-center.text-white.hero-content
                        .hero-badge.mb-3
                            i.fas.fa-star.me-2
                            span Sản phẩm nổi bật
                        h1.hero-title.mb-4 #{product.title || "Chi tiết sản phẩm"}
                        p.hero-subtitle.mb-4 Khám phá sản phẩm chất lượng cao với giá tốt nhất
                        .hero-scroll-indicator
                            i.fas.fa-chevron-down

    // Main Product Section
    .container.product-container
        .product-card.shadow-xl.rounded-3xl.overflow-hidden.bg-white
            .row.g-0
                // Product Image Column
                .col-lg-6.product-image-section
                    .image-container.position-relative.h-100
                        if product.thumbnail
                            .image-wrapper.position-relative.h-100
                                img.product-main-image.w-100.h-100(
                                    src=product.thumbnail
                                    alt=product.title || "Product Image"
                                )
                                // Overlay effects
                                .image-overlay.position-absolute.w-100.h-100
                                .image-glow.position-absolute.w-100.h-100
                                
                                // Discount badge
                                if product.discountPercentage
                                    .discount-badge.position-absolute
                                        .badge-content
                                            .badge-icon
                                                i.fas.fa-fire
                                            .badge-text
                                                span.discount-percent -#{product.discountPercentage}%
                                                span.discount-label GIẢM GIÁ
                        else
                            .no-image-placeholder.d-flex.align-items-center.justify-content-center.h-100
                                .placeholder-content
                                    i.fas.fa-image.fa-4x.text-muted.mb-3
                                    p.text-muted Chưa có hình ảnh

                // Product Info Column
                .col-lg-6.product-info-section
                    .product-info.p-5.h-100.d-flex.flex-column
                        // Category & Title
                        .product-header.mb-4
                            if product.category && product.category.title
                                .category-badge.mb-3
                                    i.fas.fa-tag.me-2
                                    a( class="text-decoration-none" ,href=`/products/${product.category.slug}`) Thương hiệu:  #{product.category.title}
                            h1.product-title.mb-0 #{product.title || "Tên sản phẩm"}
                        
                        // Rating (placeholder)
                        .rating-section.mb-4
                            .rating-stars
                                - for(let i = 1; i <= 5; i++)
                                    i.fas.fa-star.text-warning
                            span.rating-text.ms-2 4.8 (128 đánh giá)
                        
                        // Price Section
                        if product.price
                            .price-section.mb-4
                                .price-container
                                    if product.discountPercentage
                                        .price-old.mb-2
                                            span.text-muted.text-decoration-line-through
                                                | $#{(product.price / (1 - product.discountPercentage/100)).toFixed(2)}
                                        .price-current
                                            .price-amount $#{product.price}
                                            .price-currency
                                        .savings-amount.mt-2
                                            i.fas.fa-piggy-bank.me-2
                                            span Tiết kiệm: $#{((product.price / (1 - product.discountPercentage/100)) - product.price).toFixed(2)}
                                    else
                                        .price-current
                                            .price-amount $#{product.price}
                                            .price-currency

                        // Product Stats
                        .product-stats.mb-4
                            .stats-grid
                                .stat-item
                                    .stat-icon
                                        i.fas.fa-boxes
                                    .stat-content
                                        .stat-label Còn lại
                                        .stat-value(class=product.stock > 0 ? "text-success" : "text-danger")
                                            | #{product.stock} sản phẩm
                                
                                .stat-item
                                    .stat-icon
                                        i.fas.fa-sort-numeric-up
                                    .stat-content
                                        .stat-label Vị trí
                                        .stat-value #{product.position}

                        // Action Buttons
                        form(
                            action=`/cart/add/${product.id}`
                            method="POST"
                            class="button-group"
                        )
                            // Add to Cart Button
                            input(
                                class="form-control mb-2"
                                type="number",
                                name="quantity"
                                value="1"
                                min="1"
                                max=product.stock
                            )
                            button.btn.btn-primary.btn-add-cart(
                                       type=
                                        onclick="addToCart()"
                                    )
                                        .btn-content
                                            i.fas.fa-cart-plus
                                            span Thêm vào giỏ
                                        .btn-ripple     
                            button.btn.btn-outline.btn-wishlist(onclick="addToWishlist()")
                                        .btn-content
                                            i.fas.fa-heart
                                            span Yêu thích
                                        .btn-ripple
                            
                                    

                        // Features
                        .features-section.mt-auto
                            .features-grid
                                .feature-item
                                    .feature-icon
                                        i.fas.fa-shipping-fast
                                    .feature-text Giao hàng nhanh
                                .feature-item
                                    .feature-icon
                                        i.fas.fa-shield-alt
                                    .feature-text Bảo hành chính hãng
                                .feature-item
                                    .feature-icon
                                        i.fas.fa-undo-alt
                                    .feature-text Đổi trả 30 ngày

    // Description Section
    if product.description
        .container.description-container
            .description-card.shadow-lg.rounded-3xl.overflow-hidden.bg-white
                .description-header.text-center.p-4
                    h2.section-title.mb-0
                        i.fas.fa-info-circle.me-3
                        | Mô tả sản phẩm
                .description-content.p-5
                    .description-text !{product.description}

    // Enhanced Styles
    style.
        /* General Styling & Base */
        :root {
            --primary-color: #007bff;
            --secondary-color: #6c757d;
            --accent-color: #ffc107;
            --danger-color: #dc3545;
            --success-color: #28a745;
            --light-bg: #f8f9fa;
            --dark-text: #333;
            --light-text: #666;
            --border-color: #e9ecef;
            --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            --card-shadow-lg: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            --border-radius-sm: 0.5rem;
            --border-radius-md: 0.75rem;
            --border-radius-lg: 1.5rem;
            --border-radius-full: 50px;
        }

        body {
            font-family: 'Inter', sans-serif; /* A modern, clean font */
            color: var(--dark-text);
            background-color: #f0f2f5; /* Light grey background for the page */
            line-height: 1.6;
        }

        /* Hero Section */
        .hero-section {
            position: relative;
            overflow: hidden;
            height: 60vh; /* Adjust height as needed */
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 2rem;
            color: white;
            min-height: 400px; /* Minimum height for smaller screens */
        }

        .hero-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            /* Dynamic gradient example */
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            background-size: 400% 400%;
            animation: gradientShift 15s ease infinite; /* Animated gradient */
            z-index: -1;
        }

        @keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .hero-content {
            position: relative;
            z-index: 1;
            max-width: 800px;
        }

        .hero-badge {
            display: inline-flex;
            align-items: center;
            background: rgba(255, 255, 255, 0.2); /* Semi-transparent background */
            backdrop-filter: blur(5px); /* Frosted glass effect */
            padding: 0.5rem 1.2rem;
            border-radius: var(--border-radius-full); /* Pill shape */
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 1rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .hero-badge i {
            color: var(--accent-color); /* Star color */
            margin-right: 0.5rem;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 800;
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.4); /* Text shadow */
            margin-bottom: 1.5rem;
            line-height: 1.1;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            font-weight: 300;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .hero-scroll-indicator {
            font-size: 2rem;
            animation: bounce 2s infinite; /* Bounce animation */
            cursor: pointer;
            margin-top: 1rem;
            color: rgba(255, 255, 255, 0.8);
            transition: color 0.3s ease;
        }

        .hero-scroll-indicator:hover {
            color: white;
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-10px);
            }
            60% {
                transform: translateY(-5px);
            }
        }

        /* Product Card Section */
        .product-container {
            margin-top: -80px; /* Overlap with hero section */
            position: relative;
            z-index: 10; /* Ensure it's above other content */
            padding-bottom: 4rem; /* Space below the card */
        }

        .product-card {
            background-color: white;
            border-radius: 2rem; /* Rounded-3xl equivalent */
            box-shadow: var(--card-shadow-lg); /* Shadow-xl equivalent */
            overflow: hidden;
            display: flex; /* For flexible column layout */
            min-height: 600px; /* Ensure sufficient height for content */
        }

        .product-image-section {
            position: relative;
            padding: 2rem; /* Inner padding for image area */
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: var(--light-bg); /* Light background for image area */
        }

        .image-container {
            position: relative;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .product-main-image {
            display: block;
            max-width: 100%;
            max-height: 100%;
            object-fit: contain; /* Ensures image fits without distortion */
            border-radius: var(--border-radius-md); /* Slightly rounded image */
            transition: transform 0.3s ease-in-out;
        }

        .product-main-image:hover {
            transform: scale(1.02); /* Subtle zoom on hover */
        }

        .image-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0) 70%);
            pointer-events: none; /* Allows clicks to pass through */
        }

        .image-glow {
            position: absolute;
            top: -10%;
            left: -10%;
            width: 120%;
            height: 120%;
            background: radial-gradient(circle, rgba(106, 17, 203, 0.1) 0%, rgba(37, 117, 252, 0.1) 50%, rgba(0,0,0,0) 70%);
            filter: blur(50px);
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
        }

        .product-image-section:hover .image-glow {
            opacity: 1; /* Glow on hover */
        }

        .discount-badge {
            position: absolute;
            top: 1.5rem;
            right: 1.5rem;
            background-color: var(--danger-color); /* Vibrant red */
            color: white;
            padding: 0.8rem 1.5rem;
            border-radius: var(--border-radius-md); /* Rounded corners */
            font-weight: 700;
            font-size: 1.1rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            box-shadow: 0 8px 20px rgba(255, 77, 77, 0.4); /* Stronger shadow */
            text-transform: uppercase;
            letter-spacing: 0.5px;
            z-index: 5;
            transform: rotate(5deg); /* Slight rotation for dynamic feel */
        }

        .badge-icon {
            font-size: 1.4rem;
            margin-bottom: 0.3rem;
        }

        .badge-text {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .discount-percent {
            font-size: 1.6rem;
            line-height: 1;
        }

        .discount-label {
            font-size: 0.7rem;
            line-height: 1;
            margin-top: 0.2rem;
        }

        .no-image-placeholder {
            background-color: var(--border-color);
            border-radius: var(--border-radius-md);
            color: var(--secondary-color);
            font-size: 1.2rem;
            min-height: 250px;
            width: 100%;
        }

        .product-info-section {
            padding: 2rem;
        }

        .product-info {
            padding: 2rem 3rem; /* More generous padding */
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .category-badge {
            display: inline-flex;
            align-items: center;
            background-color: #e6f7ff; /* Light blue for category */
            color: #1890ff; /* Blue text */
            padding: 0.4rem 1rem;
            border-radius: var(--border-radius-full);
            font-size: 0.85rem;
            font-weight: 500;
            margin-bottom: 1.5rem;
        }

        .category-badge i {
            color: #1890ff;
            margin-right: 0.5rem;
        }

        .category-badge a {
            color: inherit; /* Inherit color from parent */
            text-decoration: none;
            transition: color 0.2s ease;
        }

        .category-badge a:hover {
            color: #096dd9; /* Darker blue on hover */
        }

        .product-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--dark-text);
            line-height: 1.2;
            margin-bottom: 1rem;
        }

        .rating-section {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .rating-stars .fa-star {
            color: var(--accent-color); /* Bright yellow stars */
            font-size: 1.1rem;
            margin-right: 0.2rem;
        }

        .rating-text {
            font-size: 0.95rem;
            color: var(--light-text);
            margin-left: 0.5rem;
        }

        .price-section {
            margin-bottom: 2rem;
        }

        .price-old {
            font-size: 1.2rem;
            color: var(--secondary-color);
            text-decoration: line-through;
            margin-bottom: 0.5rem;
        }

        .price-current {
            display: flex;
            align-items: baseline;
            gap: 0.5rem;
        }

        .price-amount {
            font-size: 3rem; /* Large current price */
            font-weight: 700;
            color: var(--primary-color); /* Primary brand color for price */
        }

        .price-currency {
            font-size: 1.5rem;
            font-weight: 500;
            color: var(--primary-color);
        }

        .savings-amount {
            display: flex;
            align-items: center;
            font-size: 1rem;
            color: var(--success-color); /* Green for savings */
            font-weight: 500;
            margin-top: 0.5rem;
        }

        .savings-amount i {
            color: var(--success-color);
            margin-right: 0.5rem;
        }

        .product-stats {
            margin-bottom: 2.5rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); /* Responsive grid */
            gap: 1.5rem;
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            background-color: #f2faff; /* Light background for stat items */
            padding: 0.8rem 1rem;
            border-radius: var(--border-radius-md);
            border: 1px solid #e0efff;
        }

        .stat-icon {
            font-size: 1.3rem;
            color: var(--primary-color);
        }

        .stat-content {
            display: flex;
            flex-direction: column;
        }

        .stat-label {
            font-size: 0.85rem;
            color: var(--secondary-color);
        }

        .stat-value {
            font-size: 1.1rem;
            font-weight: 600;
        }

        .stat-value.text-success {
            color: var(--success-color);
        }

        .stat-value.text-danger {
            color: var(--danger-color);
        }

        .button-group {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            margin-top: auto; /* Pushes buttons to the bottom */
        }

        .button-group .form-control {
            width: 100%;
            max-width: 150px; /* Limit width of quantity input */
            align-self: flex-start;
            border-radius: var(--border-radius-md);
            padding: 0.75rem 1rem;
            font-size: 1.1rem;
            border: 1px solid var(--border-color);
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
            -webkit-appearance: none; /* Remove default spinner for Chrome/Safari */
            -moz-appearance: textfield; /* Remove default spinner for Firefox */
        }
        /* Hide spin buttons for input type number for Chrome, Safari, Edge, Opera */
        .button-group input[type="number"]::-webkit-outer-spin-button,
        .button-group input[type="number"]::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }


        .button-group .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            outline: none;
        }

        .btn {
            position: relative;
            overflow: hidden;
            border-radius: var(--border-radius-md);
            padding: 1rem 2rem;
            font-size: 1.2rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease, transform 0.1s ease, box-shadow 0.3s ease;
            text-decoration: none; /* Ensure no underline for links styled as buttons */
        }

        .btn-add-cart {
            background-color: var(--primary-color); /* Primary button color */
            color: white;
            border: none;
            box-shadow: 0 5px 15px rgba(0, 123, 255, 0.3);
        }

        .btn-add-cart:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 123, 255, 0.4);
        }

        .btn-add-cart:active {
            transform: translateY(0);
            box-shadow: 0 2px 5px rgba(0, 123, 255, 0.2);
        }

        .btn-wishlist {
            background-color: transparent;
            color: var(--primary-color); /* Outline color */
            border: 2px solid var(--primary-color);
        }

        .btn-wishlist:hover {
            background-color: var(--primary-color);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 123, 255, 0.2);
        }

        .btn-wishlist:active {
            transform: translateY(0);
            box-shadow: none;
        }

        .btn-content {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        /* Ripple effect */
        .btn-ripple {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            animation: ripple 0.6s linear forwards;
            transform: scale(0);
            opacity: 1;
            pointer-events: none;
            z-index: 1; /* Ensure ripple is above content but below text */
        }

        @keyframes ripple {
            to {
                transform: scale(4);
                opacity: 0;
            }
        }

        .features-section {
            margin-top: 2rem;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); /* Responsive grid for features */
            gap: 1.5rem;
        }

        .feature-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            background-color: var(--light-bg); /* Light background for features */
            padding: 1.5rem 1rem;
            border-radius: var(--border-radius-md);
            border: 1px solid var(--border-color);
            transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
        }

        .feature-item:hover {
            background-color: #e2f0ff; /* Subtle highlight on hover */
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 123, 255, 0.1);
        }

        .feature-icon {
            font-size: 2rem;
            color: var(--primary-color); /* Icon color */
            margin-bottom: 0.75rem;
        }

        .feature-text {
            font-size: 1rem;
            font-weight: 500;
            color: var(--dark-text);
        }

        /* Description Section */
        .description-container {
            padding-top: 2rem; /* Space from product card */
            padding-bottom: 4rem;
        }

        .description-card {
            background-color: white;
            border-radius: 2rem; /* Consistent border-radius */
            box-shadow: var(--card-shadow); /* Lighter shadow for description */
            overflow: hidden;
        }

        .description-header {
            background-color: #f0f8ff; /* Light blue header */
            padding: 1.5rem 2rem;
            border-bottom: 1px solid #e6f7ff;
        }

        .section-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--dark-text);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .section-title i {
            color: var(--primary-color);
            margin-right: 0.75rem;
            font-size: 1.6rem;
        }

        .description-content {
            padding: 2.5rem 3rem; /* Ample padding for content */
            line-height: 1.8; /* Improved readability */
            color: var(--secondary-color);
            font-size: 1.05rem;
        }

        .description-text {
            /* Basic styling for content within the description */
            margin-bottom: 1rem;
        }

        .description-text h1, .description-text h2, .description-text h3, .description-text h4, .description-text h5, .description-text h6 {
            color: var(--dark-text);
            margin-top: 1.5rem;
            margin-bottom: 1rem;
            font-weight: 600;
        }
        .description-text h1 { font-size: 2.2rem; }
        .description-text h2 { font-size: 2rem; }
        .description-text h3 { font-size: 1.8rem; }
        .description-text h4 { font-size: 1.6rem; }

        .description-text p {
            margin-bottom: 1rem;
        }

        .description-text ul, .description-text ol {
            margin-left: 1.5rem;
            margin-bottom: 1rem;
            list-style-position: outside;
            padding-left: 0;
        }
        .description-text ul li {
            list-style-type: disc;
        }
        .description-text ol li {
            list-style-type: decimal;
        }

        .description-text li {
            margin-bottom: 0.5rem;
        }

        .description-text img {
            max-width: 100%;
            height: auto;
            display: block; /* Ensures image takes full width and centers if parent is text-align center */
            margin: 1.5rem auto; /* Center images */
            border-radius: var(--border-radius-md);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        /* Responsive Design (Media Queries) */
        @media (max-width: 991.98px) {
            .product-card {
                flex-direction: column; /* Stack image and info on smaller screens */
            }

            .product-image-section {
                padding: 1.5rem;
                min-height: 300px; /* Adjust height for mobile */
            }

            .product-info {
                padding: 1.5rem;
            }

            .product-title {
                font-size: 2rem;
            }

            .price-amount {
                font-size: 2.5rem;
            }

            .hero-title {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 1rem;
            }

            .discount-badge {
                padding: 0.6rem 1rem;
                font-size: 0.9rem;
            }

            .discount-percent {
                font-size: 1.2rem;
